  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />
    

    <title>PetTracker</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
     <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    
  </head>
  <body>



  <nav class="pink lighten-3">
    <div class="nav-wrapper" > 
    <img src="/images/betterbanner.png" class="responsive-img" width="795" height="64">
      <a href="/" class="brand-logo center">Tracker</a>
      <ul class="right hide-on-med-and-down">
        <% if !is_logged_in? %>
          <li><a href="/signup">Sign Up</a></li>
          <li><a href="/login">Log In</a></li>
        <% else %>
          <li><a href="/profile/<%= @current_user.id %>">Profile</a></li>
          <li><a href="/pet">View Pets</a></li>
          <li><a href="/pet/new">Add Pet</a></li>
          <li><a href="/logout">Log Out</a></li>
        <% end %>
      </ul>
    </div>
  </nav>        
<center>
  <div class="errors" type="text red">
    <% if flash[:errors] %>
      <% flash[:errors].each do |error| %>
        <p><%= error %></p>
      <% end %> 
    <% end %>
  </div>
</center>
  
<link rel="stylesheet" type="text/css" href="/stylesheets/mystyle.css">
<div class="container">
        <%= yield %>
</div>

